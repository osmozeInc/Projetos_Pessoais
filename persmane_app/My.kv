ScreenManager:
    Task:
        name: 'task'
    Reminder:
        name: 'reminder'
    Project:
        name: 'project'
    New_Task:
        name: 'new_task'
    New_Reminder:
        name: 'new_reminder'
    New_Project:
        name: 'new_project'

<NavigationBar>:
    size_hint_y: 0.1
    size: self.size
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.5

        Navbar_Button_Class:
            id: reminder
            text: 'Lembretes'
            on_release: root.Press_Reminder()
        Navbar_Button_Class:
            text: 'Tarefas'
            on_release: root.Press_Task()
        Navbar_Button_Class:
            text: 'Projetos'
            on_release: root.Press_Project()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.05
    
        Line_Navbar_Class:
            id: reminder_line
        Line_Navbar_Class:
            id: task_line
        Line_Navbar_Class:
            id: project_line

