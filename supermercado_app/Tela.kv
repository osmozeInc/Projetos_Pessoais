<Screen_Cadastro>:
    name: "cadastro"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
        #
        Label:
            text: "CADASTRO"
            font_size: 30
            pos_hint: {'center_x':.5, 'center_y':.9}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Label:
            text: "Nome:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.76}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: nome_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.2, 'y':.7}
            color: 0, 0, 0, 1
        #
        Label:
            id: nome_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.67}
            color: 0.5, 0, 0, 1
        #
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            halign: 'left'
            pos_hint: {'x': 0.2, 'y': 0.62}
            spacing: 15

            Label:
                text: "CPF:"
                font_size: 20
                color: 0, 0, 0, 1
                size_hint_x: None                       # Define que o tamanho em X não é relativo
                width: self.texture_size[0]             # Define a largura com base no tamanho do texto
            Label:
                text: "DIGITE SÓ OS NÚMEROS"
                font_size: 15
                color: 0.6, 0.6, 0.6, 1
                size_hint_x: None                       # Define que o tamanho em X não é relativo
                width: self.texture_size[0]             # Define a largura com base no tamanho do texto
        #
        TextInput:
            id: cpf_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.2, 'y':.54}
            color: 0, 0, 0, 1
        #
        Label:
            id: cpf_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.51}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "DDD/Celular:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.44}
            color: 0, 0, 0, 1
        #
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            halign: 'left'
            pos_hint: {'x': 0.2, 'y':.38}
            spacing: 5

            TextInput:
                id: ddd_cad
                size_hint: None, None
                size: 50, 40
                color: 0, 0, 0, 1
                size_hint_x: None
                width: self.size[0]
                text: ""
                font_color: 0.6, 0.6, 0.6, 1
            
            TextInput:
                id: numero_cad
                size_hint: None, None
                size: 120, 40
                halign: 'left'
                color: 0, 0, 0, 1
                size_hint_x: None
                width: self.size[0]
                text: ""
                font_color: 0.6, 0.6, 0.6, 1
        #
        Label:
            id: DDDnumero_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.35}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "E-mail:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.28}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: email_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.2, 'y':.22}
            color: 0, 0, 0, 1
        #
        Label:
            id: email_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.19}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Departamento:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.76}
            color: 0, 0, 0, 1
        #
        Spinner:
            id: departamento_cad
            text: 'Selecione o departamento'
            values: ['Entrega', 'Cozinha', 'Atendimento', 'Administração', 'Estoque', 'Auxiliar']
