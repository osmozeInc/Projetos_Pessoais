        Label:
            id: departamento_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.67}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Cargo:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.6}
            color: 0, 0, 0, 1
        #
