            id: cargo_cad
            text: 'Selecione o cargo'
            size_hint: None, None
            size: 250, 40
            background_normal: '1, 1, 1, 1'
            background_color: 1, 1, 1, 1
            border: (0, 0, 1, 0)
            halign: 'left'
            pos_hint: {'x':.6, 'y':.54}
            font_size: 17
            color: 0, 0, 0, 1
        #
        Label:
            id: cargo_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.51}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Senha:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.44}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: senha_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.6, 'y':.38}
            color: 0, 0, 0, 1
        #
        Label:
            id: senha_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.35}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Confirme a senha:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.28}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: confirmSenha_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.6, 'y':.22}
            color: 0, 0, 0, 1
        #
        Label:
            id: confirmSenha_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.19}
            color: 0.5, 0, 0, 1
        #
        Label:
            id: verificacao_cad_error
            text: ""
            bold: True
            font_size: 22
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            color: 0, 0.6, 0, 1
        #
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            spacing: 850

            Button:
                text: "Voltar ao login"
                size_hint: None, None
                size: 200, 50
                font_size: 18
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.transition.direction = 'left'
                on_release: app.root.current = 'login'

            Button:
                text: "Realizar Cadastro"
                size_hint: None, None
                size: 200, 50
                font_size: 18
                background_color: 0.2, 0.8, 0.2, 1
                on_release: root.informacoes_de_cadastro(nome_cad.text, cpf_cad.text, ddd_cad.text, numero_cad.text, email_cad.text, departamento_cad.text, cargo_cad.text, senha_cad.text, confirmSenha_cad.text)
