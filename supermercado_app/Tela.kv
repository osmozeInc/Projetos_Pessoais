<Screen_Menu_Administracao>
    name: "Administração"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        #
        Widget:
            canvas.before:
                Color:
                    rgba: 0.4, 0.9, 1, 1
                Rectangle:
                    pos: 0, self.height - 160
                    size: 1280, 160
        #
        Widget:
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Line:
                    points: [0, self.height - 160, 1280, self.height - 160]
                    width: 1.7
        Widget:
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Rectangle:
                    pos: 0, 0
                    size: 260, 558
        #
        Label:
            text: "Gerência"
            font_size: 50
            pos_hint: {'center_x':.5, 'center_y':.89}
            size_hint: None, None
            bold: True
            color: 1, 1, 1, 1
            outline_width: 1
            outline_color: 0.5, 0.5, 0.5, 1
        #
        Label:
            text: "OPÇÕES:"
            font_size: 25
            pos_hint: {'center_x':.07, 'center_y':.7}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.1, 'center_y': 0.35}
            spacing: 40
            #
            Button:
                text: "Cadastrar \n Funcionário"
                halign: 'center'
                size_hint: None, None
                size: 160, 80
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.transition.direction = 'right'
                on_release: app.root.current = 'cadastro'
            #
            Button:
                text: "Cadastrar \n Fornecedor"
                halign: 'center'
                size_hint: None, None
                size: 160, 80
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: app.root.current = 'Estoque'
            #
            Button:
                text: "Cadastrar \n Produto"
                halign: 'center'
                size_hint: None, None
                size: 160, 80
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: app.root.current = 'Cozinha'
            #
            Button:
                text: "Voltar ao login"
                halign: 'center'
                size_hint: None, None
                size: 200, 50
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: app.root.current = 'login'
