ScreenManager:
    id: screen_manager
    Screen_Login:
        name: "login"
    Screen_Cadastro:
        name: "cadastro"
    Screen_Menu_Entrega
        name: "Entrega"
    Screen_Menu_Cozinha
        name: "Cozinha"
    Screen_Menu_Atendimento
        name: "Atendimento"
    Screen_Menu_Estoque
        name: "Estoque"
    Screen_Menu_Administracao
        name: "Administração"
    Screen_Menu_Auxiliar
        name: "Auxiliar" 
#
<SpinnerOption>:
    size_hint_y: None
    text_size: self.size
    valign: 'center'
    halign: 'center'
    color: 0, 0, 0, 1
    background_normal: ''
    

#
<Screen_Login>:
    name: "login"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        #
        Label:
            text: "FAÇA SEU LOGIN"
            font_size: 30
            pos_hint: {'center_x':.5, 'center_y':.9}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Label:
            id: verificacao_log_error
            text: ""
            font_size: 18
            halign: 'center'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x':.5, 'center_y':.85}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Digite seu CPF"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.73}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: cpf_log
            hint_text: 'digite somente os números'
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.67}
        #
        Label:
            id: cpf_log_error
            text: ""
            font_size: 15
            pos_hint: {'center_x':.48, 'center_y':.63}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Digite sua senha"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.57}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: senha_log
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.51}
        #
        Label:
            id: senha_log_error
            text: ""
            font_size: 15
            pos_hint: {'center_x':.48, 'center_y':.47}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Departamento"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.41}
            color: 0, 0, 0, 1

        #
        Spinner:
            id: departamento_log
            text: 'Selecione o departamento'
            values: ['Entrega', 'Cozinha', 'Atendimento', 'Administração', 'Estoque', 'Auxiliar']
            size_hint: None, None
            size: 200, 40
            background_color: 1, 1, 1, 1
            background_normal: ''
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            font_size: 15
            color: 0, 0, 0, 1
        #
        Label:
            id: departamento_log_error
            text: ""
            font_size: 15
            pos_hint: {'center_x':.48, 'center_y':.305}
            color: 0.5, 0, 0, 1
        #
        Button:
            text: "Entrar"
            size_hint: None, None
            size: 200, 40
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.informacoes_de_login(cpf_log.text, senha_log.text, departamento_log.text)
        #
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.1, 'center_y': 0.5}
            spacing: 20
            #
            Button:
                text: "Administração"
                size_hint: None, None
                size: 150, 40
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: app.root.current = 'Administração'
