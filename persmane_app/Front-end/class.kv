#: import get_color_from_hex kivy.utils.get_color_from_hex
#
# 
# ELEMENTOS PRINCIPAIS
# 
<Background_Class@Widget>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#212121')
        Rectangle:
            size: self.size
#
<Head_BoxLayot_Class@BoxLayout>
    orientation: 'horizontal'
    size_hint: 0.9, 0.1
    spacing: self.width * 0.8
    pos_hint: {'x': 0.1,'center_y': 0.9}    
#
<SaveCancel_New_Thing_BoxLayot_Class@BoxLayout>
    orientation: 'horizontal'
    spacing: self.width * 0.75
    pos_hint: {'x': 0.1,'center_y': 0.8}
    size_hint: 0.8, 0.08
#
<New_Thing_BoxLayot_Class@BoxLayout>
    orientation: 'horizontal'
    spacing: self.width * 0.08
    pos_hint: {'x': 0.2,'center_y': 0.6}
    size_hint: 0.6, 0.14
#
<Element_Reminder_FloatLayout_Class@FloatLayout>
    size_hint_max_y: 140
    size_hint_min_y: 140
    canvas:
        Color:
            rgba: 1, 0.5, 0, 1
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)    
    
#
#
# LABELS
#
<Head_Label_Class@Label>:
    font_size: 25
    color: 1, 1, 1, 1
    pos_hint: {'center_x': 0.05,'center_y': 0.95}
    size_hint: self.width * 0.1, 0
#
<New_Thing_Label_Class@Label>:
    font_size: 40
    pos_hint: {'x': -0.3,'center_y': 0.9}
    bold: True
#
#
# BOTÕES
#
<Navbar_Button_Class@Button>:
    background_color: 0, 0, 0, 1
    font_size: 28
#
<Head_Button_Class@Button>
    font_size: 25
    color: 1, 1, 1, 1
    background_color: 0, 0, 0, 0
    pos_hint: {'center_x': 0.95,'center_y': 0.95}
    size_hint: None, None
    size: self.texture_size
    
#
<SaveCancel_Ting_Button_Class@Button>:
    background_color: 1, 1, 1, 0
    font_size: 26
    size_hint: 1, 1
    canvas:
        Color:
            rgba: 1, 0.5, 0, 1
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
#
#
# TEXTINPUTS
#
<New_Thing_TextInput_Class@TextInput>:
    font_size: 22
    size_hint: 1, 0.4
    multiline: False

#
#
# FORMAS DO DESIGN
#
<Line_Navbar_Class@Widget>:
    canvas:
        Color:
            rgba: 1, 0.5, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
#
<New_Thing_Line_Class@Widget>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: self.width * 0.1, self.height * 0.85, self.width * 0.9, self.height * 0.85
            width: 1
#
<MDCard>:
    orientation: 'horizontal'
    size_hint: 0.2, 0.6
    theme_bg_color: "Custom"
    md_bg_color: [1, 0.25, 0.25, 1]
    padding: [15, 0, 15, 0]

    MDLabel:
        id: notification
        text: "Lembrete Excluido\nEle não estará aqui na próxima vez"
        text_color: [1, 1, 1, 1]
        